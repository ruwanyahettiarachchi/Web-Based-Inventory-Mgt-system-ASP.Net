@model List<SalesReportViewModel>
@{
    ViewData["Title"] = "Sales Report";
}

<h2>Sales Report</h2>

<a class="btn btn-primary" asp-controller="Report" asp-action="ExportToExcel">Export to Excel</a>
<a class="btn btn-danger" asp-controller="Report" asp-action="ExportToPdf">Export to PDF</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Date</th>
            <th>Total Sales (LKR)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.TotalSales.ToString("N2")</td>
            </tr>
        }
    </tbody>
</table>
